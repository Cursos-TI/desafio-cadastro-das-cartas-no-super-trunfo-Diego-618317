#include <stdio.h>

int main(){

    printf("desfio super trunfo!\n");


    char estado1[50];
    char cidade1[50];
    char codigo1[50];
    float PIB_percapita1, PIB1;
    int populacao1;
    float densidade_populacional1, area1;

    char estado2[50];
    char cidade2[50];
    char codigo2[50];
    float PIB_percapita2, PIB2;
    int populacao2;
    float densidade_populacional2, area2;


    printf("digite o estado_1: \n");
    scanf("%s", estado1);

    printf("digite a cidade_1: \n");
    scanf("%s", cidade1);

    printf("digite o codigo_1: \n");
    scanf("%s", codigo1);

    printf("digite o PIB_1: \n");
    scanf("%f", &PIB1);

    printf("digite o numero da populacao_1: \n");
    scanf("%d", &populacao1);

    printf("digite a area_1 (em km²):\n");
    scanf("%f", &area1);

    printf("o nome do estado1 é: %s\n", estado1);
    printf("o nome da cidade1 é: %s\n", cidade1);
    printf("o codigo1 é: %s\n", codigo1);
    printf("o PIB1 é: %f\n", PIB1);
    printf("numero populacional1: %d\n", populacao1);
    printf("a area1 é: %f\n", area1);

    //calculo densidade populacional_1
    densidade_populacional1 = populacao1 / area1;

    printf("a densidade populacional1 é: %.2f\n", densidade_populacional1);

    //calculo PIB per capita_1
    PIB_percapita1 = populacao1 / PIB1;

    printf("o PIB per capita1 é: %.2f\n", PIB_percapita1);


     printf("digite o estado_2: \n");
    scanf("%s", estado2);

    printf("digite a cidade_2: \n");
    scanf("%s", cidade2);

    printf("digite o codigo_2: \n");
    scanf("%s", codigo2);

    printf("digite o PIB_2: \n");
    scanf("%f", &PIB2);

    printf("digite o numero da populacao_2: \n");
    scanf("%d", &populacao2);

    printf("digite a area_2 (em km²):\n");
    scanf("%f", &area2);

    printf("o nome do estado2 é: %s\n", estado2);
    printf("o nome da cidade2 é: %s\n", cidade2);
    printf("o codigo2 é: %s\n", codigo2);
    printf("o PIB2 é: %f\n", PIB2);
    printf("numero populacional2: %d\n", populacao2);
    printf("a area2 é: %f\n", area2);

    //calculo densidade populacional_2
    densidade_populacional2 = populacao2 / area2;

    printf("a densidade populacional2 é: %.2f\n", densidade_populacional2);

    //calculo PIB per capita_2
    PIB_percapita2 = populacao2 / PIB2;

    printf("o PIB per capita2 é: %.2f\n", PIB_percapita2);


    return 0;



}
